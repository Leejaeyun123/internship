<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox alignment="CENTER" prefHeight="400.0" prefWidth="400.0" spacing="20.0" style="-fx-background-color: #f4f4f4;" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.mycompany.chat.LoginController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <Label text="로그인" textFill="#2e2e2e">
        <font>
            <Font name="System Bold" size="24.0" />
        </font>
    </Label>

    <VBox alignment="CENTER" prefWidth="300.0" spacing="10.0">
        <HBox alignment="CENTER_LEFT" spacing="10.0">
            <Label minWidth="80.0" text="아이디:" />
            <TextField fx:id="idField" promptText="아이디를 입력하세요" />
        </HBox>
        <HBox alignment="CENTER_LEFT" spacing="10.0">
            <Label minWidth="80.0" text="비밀번호:" />
            <PasswordField fx:id="passwordField" promptText="비밀번호를 입력하세요" />
        </HBox>
    </VBox>

    <Button onAction="#handleLogIn" prefWidth="150.0" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 5;" text="로그인" />

    <Label fx:id="statusLabel" alignment="CENTER" prefWidth="300.0" textFill="#e53935" wrapText="true">
        <font>
            <Font size="12.0" />
        </font>
    </Label>

    <VBox alignment="CENTER" spacing="5.0">
        <Label text="계정이 없으신가요?" />
        <Button onAction="#handleSignUpView" prefWidth="150.0" style="-fx-background-color: #2196F3; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 5;" text="회원가입" />
    </VBox>
</VBox>
