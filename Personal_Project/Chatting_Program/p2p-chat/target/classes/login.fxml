<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.PasswordField?>

<VBox alignment="CENTER" spacing="10" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.mycompany.chat.LoginController"
      style="-fx-background-color: #f0f4f7; -fx-padding: 20; -fx-border-radius: 10; -fx-background-radius: 10;">
    
    <style>
        .root {
            -fx-font-family: 'Arial';
        }
        .label {
            -fx-font-size: 14px;
            -fx-text-fill: #333;
        }
        .text-field, .password-field {
            -fx-min-width: 250px;
            -fx-pref-height: 35px;
            -fx-background-color: #fff;
            -fx-border-color: #ccc;
            -fx-border-width: 1;
            -fx-border-radius: 5;
            -fx-background-radius: 5;
            -fx-padding: 5 10;
        }
        .button {
            -fx-background-color: #4CAF50;
            -fx-text-fill: white;
            -fx-font-size: 14px;
            -fx-font-weight: bold;
            -fx-border-radius: 5;
            -fx-background-radius: 5;
            -fx-padding: 8 20;
            -fx-cursor: hand;
        }
        .button:hover {
            -fx-background-color: #45a049;
        }
    </style>
    
    <VBox alignment="CENTER" spacing="10">
        <HBox alignment="CENTER_LEFT" spacing="10">
            <Label text="아이디:" />
            <TextField fx:id="usernameField" promptText="사용자 아이디 입력"/>
        </HBox>
        <HBox alignment="CENTER_LEFT" spacing="10">
            <Label text="별명:" />
            <TextField fx:id="nicknameField" promptText="채팅에서 사용할 별명 입력"/>
        </HBox>
        <HBox alignment="CENTER_LEFT" spacing="10">
            <Label text="비밀번호:" />
            <PasswordField fx:id="passwordField" promptText="비밀번호 입력"/>
        </HBox>
    </VBox>
    
    <HBox alignment="CENTER" spacing="10" VBox.vgrow="ALWAYS">
        <Button fx:id="signUpButton" text="회원가입" onAction="#handleSignUp" style="-fx-background-color: #3f51b5;"/>
        <Button fx:id="logInButton" text="로그인" onAction="#handleLogIn"/>
    </HBox>
</VBox>