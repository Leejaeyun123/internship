<GridPane xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="10" vgap="10">
    <padding><Insets top="25" right="25" bottom="25" left="25"/></padding>

    <Label text="ID:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
    <TextField fx:id="idField" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

    <Label text="Password:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
    <PasswordField fx:id="passwordField" GridPane.columnIndex="1" GridPane.rowIndex="2"/>

    <HBox spacing="10" alignment="bottom_right" GridPane.columnIndex="1" GridPane.rowIndex="4">
        <Button text="Sign Up" onAction="#handleSignUpButtonAction"/>
        <Button text="Log In" onAction="#handleLogInButtonAction"/>
    </HBox>
</GridPane>