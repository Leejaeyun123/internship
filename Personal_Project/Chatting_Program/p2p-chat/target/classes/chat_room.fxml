<?xml version="1.0" encoding="UTF-8"?>
 
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>
 
<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.mycompany.chat.ChatRoomController"
      alignment="center" spacing="10">
    
    <TextArea fx:id="chatArea" editable="false" VBox.vgrow="ALWAYS"/>
    
    <HBox spacing="5" alignment="center">
        <TextField fx:id="messageField" HBox.hgrow="ALWAYS" onAction="#sendMessage"/>
        <Button text="전송" onAction="#sendMessage"/>
    </HBox>
</VBox>
<!--채팅방 UI를 정의. 엔터 키를 누르거나 버튼을 클릭하면 메시지가 전송되도록 함-->